#!/usr/bin/env node

var https = require('https'),
	sparkling = require('../index'),
	pkg = require('../package.json');

var argvs = process.argv;

var options = argvs[2];

switch(options){
	case undefined:
		printHelpInfo();
		break;
	case '-v':
		console.log(pkg.version);
		break;
	case '--version':
		console.log(pkg.version);
		break;
	case '-h':
		printHelpInfo();
		break;
	default:
		if(/^\-/.test(options)){
			printHelpInfo();
		}else{
            sparkling.getAllStars(options,function(stars){
                if(stars === 0){
                    console.log("oops~You have not got any star on GitHub.");
                }else if(stars === 1){
                    console.log("You have got only one star on GitHub.")
                }else{
                    console.log("You have got "+stars+" stars on GitHub.")
                }
            });
		}
		break;
}


function printHelpInfo(){
	console.log("\n  Usage:sparkling username\n");
	console.log("  Options:\n");
	console.log("	-v, --version 	print sparkling's version\n");
}

// console.log(process);
